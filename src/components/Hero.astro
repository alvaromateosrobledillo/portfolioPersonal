---
const personalImageAlt = "Álvaro Mateos"
import Badge from "./Badge.astro"
import LinkedInIcon from "./icons/LinkedIn.astro"
import { FaWhatsapp } from "react-icons/fa"; // Importar ícono de WhatsApp
import SocialPill from "./SocialPill.astro"
---

<!-- Hero section with animation and key skills -->

<div class="max-w-3xl mx-auto text-center">
  <!-- Image and introduction -->
  <div class="flex flex-col items-center mb-8 animate-fade-in">
    <img
      class="rounded-full shadow-xl w-40 h-40 object-cover mb-4"
      src="/alvaroHome.jpg"   
      alt={personalImageAlt}
    />
    <Badge class="mb-4">Disponible para trabajar</Badge>
    <h1 class="text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white mb-4">
      ¡Hola, soy Álvaro Mateos!
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-400">
      <strong>Desarrollador Web Full Stack</strong> apasionado por las tecnologías más avanzadas y con experiencia en PHP, Angular, y Node.js.
    </p>
  </div>

  <!-- Skills section with hover effect -->
  <div class="mt-6 flex flex-wrap justify-center gap-6">
    <span class="skill px-3 py-1 bg-yellow-100 text-yellow-600 rounded-full">PHP</span>
    <span class="skill px-3 py-1 bg-blue-100 text-blue-600 rounded-full">Angular</span>
    <span class="skill px-3 py-1 bg-green-100 text-green-600 rounded-full">Node.js</span>
    <span class="skill px-3 py-1 bg-indigo-100 text-indigo-600 rounded-full">React</span>
    <span class="skill px-3 py-1 bg-gray-100 text-gray-600 rounded-full">SQL</span>
  </div>

  <!-- Call to action buttons with tooltips -->
  <nav class="flex justify-center gap-4 mt-8">
    <SocialPill href="https://wa.me/34687854801" title="Contáctame por WhatsApp">
      <FaWhatsapp className="size-4" /> <!-- Corregido: class -> className -->
      Envíame un mensaje
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/alvaromateosrobledillo/" title="Conéctate conmigo en LinkedIn">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>

  <!-- Button to download CV -->
  <div class="mt-6">
    <a
      href="/CV_ALVARO_MATEOS.pdf" 
      class="px-6 py-3 bg-yellow-500 text-white rounded-full hover:bg-yellow-600 dark:bg-yellow-400 dark:hover:bg-yellow-500 transition-shadow shadow-lg hover:shadow-xl"
      download
    >
      Descarga mi CV
    </a>
  </div>
</div>

<!-- Adding CSS for animation and hover effects -->
<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .social-pill:hover {
    transform: scale(1.05);
    transition: transform 0.2s ease-in-out;
  }

  .skill:hover {
    transform: scale(1.1);
    transition: transform 0.2s ease-in-out;
  }
</style>
